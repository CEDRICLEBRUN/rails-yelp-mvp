<h1>All Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li><%= link_to restaurant.name, restaurant_path(restaurant.id) %>  (<%= restaurant.category %>)</li>
    <address><%= restaurant.address %></address>
  <% end %>
</ul>

<p><%= link_to "Create a new restaurant", new_restaurant_path %></p>
